<!DOCTYPE html>
<html lang="en">
<head>
    {{> header }}
    <link href="./css/style.css">
</head>
<body>

    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            {{> navbar }}
        </nav>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a>Bienvenido {{userLoggedIn}}</a></li>
                        <li><a href="/">Home</a></li>
                    </ul>
 
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
 
        <div class="container row">
           <h2>Hola {{userLoggedIn}}</h2>
        </div>

    </div>

    <div class="container">

        <a href="/dashboard">Volver</a>

        <div class="products-container">

            <div class="row">
                <div class="col-md-8">

                    <h2>Tabla de productos</h2>

                    {{#if prods}}


                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Descripcion</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Foto</th>
                                    <th scope="col">Acci√≤n</th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each prods}}
                                    <tr>
                                        <td>{{this.name}}</td>
                                        <td>{{this.description}}</td>
                                        <td>{{this.code}}</td>
                                        <td>$ {{this.price}}</td>
                                        <td>{{this.stock}}</td>
                                        <td>
                                            {{#if this.thumbnail}}
                                                <img style="max-width:25%;" src="{{this.thumbnail}}" alt="imagen de producto">
                                            {{else}}
                                                <img style="max-width: 25%;" src="https://cdn0.iconfinder.com/data/icons/images-image-files/24/photo_photography_image_picture_no_disable-512.png" alt="Producto sin imagen">
                                            {{/if}}
                                        </td>
                                        <td>
                                            <a href="#" data-prod-id="{{this._id}}" class="btn add-to-cart">Agregar</a>
                                        </td>
                                        
                                    </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>

                    {{else}}
                        <div class="alert alert-warning">Sin productos</div>
                    {{/if}}

                </div>
            </div>

        </div><!-- /. products-container -->

        
        
    </div>

    

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/products.js"></script>
</body>
</html>